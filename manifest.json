{
    "name": "Nifi Utils",
    "description": "This extension eases the process of maintaining production huge nifi instances with numerous flows.",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "icons": 
    {  "48": "assets/extension_icons/icon_48.png",
       "128": "assets/extension_icons/icon_128.png" 
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/nifi/*"
            ],
            "js": [
                "src/js/content_scripts/getJwtToken.js",
                "src/js/content_scripts/addCustomUiElements.js"
            ]
        }
    ],
    "background" : {"service_worker" : "src/js/service_worker/utils_service_worker.js"},
    "manifest_version": 3,
    "action": {
        "default_popup": "src/views/utils_home.html"
    },
    "options_page": "src/views/options.html" 
}